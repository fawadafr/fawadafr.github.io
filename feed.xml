---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>
  <link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/atom+xml" />
  <link href="{{ site.url }}{{ site.baseurl }}/" rel="alternate" type="text/html" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}{{ site.baseurl }}/feed.xml</id>

  <title type="html">{{ site.title | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>

  <author>
    <name>{{ site.author.name | xml_escape }}</name>
    <email>{{ site.author.email | xml_escape }}</email>
    <uri>{{ site.url }}{{ site.baseurl }}/</uri>
  </author>

  <!-- Feed logo/icon -->
  <logo>{{ site.url }}{{ site.baseurl }}/assets/images/logo.png</logo>
  <icon>{{ site.url }}{{ site.baseurl }}/assets/images/favicon.ico</icon>

  <rights>Copyright Â© {{ site.time | date: "%Y" }} {{ site.author.name }}. All rights reserved.</rights>

  {% for post in site.posts limit: 20 %}
  <entry>
    <title type="html">{{ post.title | xml_escape }}</title>
    <link href="{{ site.url }}{{ site.baseurl }}{{ post.url }}" rel="alternate" type="text/html" title="{{ post.title | xml_escape }}" />
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{% if post.last_modified_at %}{{ post.last_modified_at | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</updated>
    <id>{{ site.url }}{{ site.baseurl }}{{ post.id }}</id>

    <!-- Full-text content -->
    <content type="html" xml:base="{{ site.url }}{{ site.baseurl }}{{ post.url }}">
      <![CDATA[
        {{ post.content }}
      ]]>
    </content>

    <!-- Post excerpt/summary -->
    {% if post.excerpt %}
    <summary type="html">{{ post.excerpt | xml_escape }}</summary>
    {% endif %}

    <!-- Author information -->
    <author>
      <name>{{ site.author.name | xml_escape }}</name>
      <email>{{ site.author.email | xml_escape }}</email>
      <uri>{{ site.url }}{{ site.baseurl }}/</uri>
    </author>

    <!-- Featured image -->
    {% if post.image %}
    <link rel="enclosure"
          type="image/{% if post.image contains '.png' %}png{% elsif post.image contains '.jpg' or post.image contains '.jpeg' %}jpeg{% elsif post.image contains '.gif' %}gif{% else %}jpeg{% endif %}"
          href="{{ site.url }}{{ site.baseurl }}{{ post.image }}" />
    {% else %}
    <!-- Fallback to default OG image -->
    <link rel="enclosure"
          type="image/png"
          href="{{ site.url }}{{ site.baseurl }}/assets/images/og-image.png" />
    {% endif %}

    <!-- Categories and tags -->
    {% for tag in post.tags %}
    <category term="{{ tag | xml_escape }}" />
    {% endfor %}

    {% for category in post.categories %}
    <category term="{{ category | xml_escape }}" />
    {% endfor %}
  </entry>
  {% endfor %}
</feed>
